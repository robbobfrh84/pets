generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model pet {
  pet_id      Int         @id @default(autoincrement())
  name        String?
  type        String?
  breed       String?
  age         Int?
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime?   @updatedAt
  // toys        toy[]
}

